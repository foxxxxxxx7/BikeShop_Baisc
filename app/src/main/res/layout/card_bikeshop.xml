<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/bike_image" />

        <TextView
            android:id="@+id/bikeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageIcon"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/bikeGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bikeTitle"
            android:layout_toEndOf="@+id/imageIcon" />

        <TextView
            android:id="@+id/bikeSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bikeGender"
            android:layout_toEndOf="@+id/imageIcon" />

        <TextView
            android:id="@+id/bikeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bikeSize"
            android:layout_toEndOf="@+id/imageIcon" />

        <TextView
            android:id="@+id/bikeCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bikeGender"
            android:layout_toEndOf="@+id/imageIcon" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>